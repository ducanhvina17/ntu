<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="js/navsearch.js"></script>
    <script src="/js/login.js"></script>
    <script>
    GetSchool("<%= schools %>");
    </script>
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div id="navbar" class="collapse navbar-collapse pull-right">
                <ul class="nav navbar-nav pull-right">
                    <li><a href="/">Home</a></li>
                    <li><a href="/secondaryschool">Secondary School</a></li>
                    <li><a href="/forum">Forum</a></li>
                    <li><a href="/comparisonlist">Comparison List</a></li>
                    <% if (typeof(username) == 'undefined' || username === "")
                    { %>
                        <li class="active"><a href="/login">Login<span class="sr-only">(current)</span></a></li>
                    <% }
                    else
                    { %>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= username %><span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="/favourite">Favourite List</a></li>
                                <li><a href="/userlogout">Logout</a></li>
                            </ul>
                        </li>
                    <% } %>
                    <form class="navbar-form navbar-right" action="/searchindividualschool" method="post" onsubmit="return isEmpty()">
                        <div class="form-group">
                            <input type="text" name="schoolname" id="navsearch" class="form-control navsearch" placeholder="Search">
                        </div>
                        <button type="submit" class="btn btn-default">Search</button>
                    </form>
                </ul>
            </div>
        </div>
    </nav>
    <br><br><br><br><br><br>
    <div class="container">
        <div class="row">
    		<h2 class="text-center" id="errorMsg">
                <% if (typeof(error) != 'undefined')
                { %>
                    <%= error %>
                <% } %>
    		</h2>
        <div class="col-xs-12 text-center">
            <h1>Login</h1>
        </div>
        </div>
        <div class="row">
            <form name="loginForm" action="/userlogin" method="post">
                <div class="col-xs-4"></div>
                <div class="col-xs-4">
                    <div class="row login-row-margin">
                        <div class="col-xs-12 text-left">
                            <input type="text" id="username" name="username" class="form-control" placeholder="User Name" />
                            <br>
                        </div>
                    </div>
                    <div class="row login-row-margin">
                        <div class="col-xs-12 text-left">
                            <input type="password" id="password" name="password" class="form-control" placeholder="Password" />
                        </div>
                    </div>
                </div>
                <div class="row login-row-margin">
                    <div class="col-xs-12 text-center">
                        <p></p>
                        <button id="loginBtn" class="btn btn-primary" type="submit">Login</button>
                    </div>
                </div>
                <div class="col-xs-4"></div>
            </form>
            <div class="col-xs-12 text-center">
                <p></p>
                <a href="/register"><button id="registerBtn" class="btn btn-primary" type="submit">Register</button></a>
            </div>
            <div  style="margin-top: 42px">
                <br>
                <a href="forgetpassword.php"><font color="white">Forget Password?</font></a>
            </div>
        </div>
    </div>
</body>
</html>
